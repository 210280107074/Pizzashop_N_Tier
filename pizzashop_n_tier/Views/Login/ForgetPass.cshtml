    <script src></script>
    <style>
        html,body{
            height: 100%;
            width: 100%;
            /* overflow: hidden; */
        }
        .img-container img{
            height: 100%;
            width: 100%;
            object-fit: cover;
        }
        .container-fluid{
            overflow: hidden;
        }
        .form-container{
            background-color: #D8EFF7;
            
        }
        .logo-img{
            width: 14%;
            height: auto;
        }
        .ps-label{
            font-size: 36px;
            color: #1D7BB9;
        }
        input{
            height: 25%;
        }
        .label-1{
            font-weight: bold;
            font-size: 20px;
        }
        .label-2{
            font-size: 13px;
            margin-bottom: 4%;
        }

