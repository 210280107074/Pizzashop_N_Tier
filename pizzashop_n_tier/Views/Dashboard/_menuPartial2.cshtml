@model ItemModel

<h3 class="p-2">Items</h3>
<div class="d-flex justify-content-end w-100 ">
    <div class="me-3">
 <input type="email" class="form-control h-100 " id="exampleFormControlInput1" placeholder="Search">
    </div>
    <button class="btn btn-outline-dark me-2"><img src="~/images/trash-fill.svg" alt=""></button>
    <button class="btn btn-outline-dark me-2" type="submit" data-bs-toggle="modal"
        data-bs-target="#exampleModalCenter3">+ New Item</button>

</div>
<div class="tbl m-3 table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    <div class="form-check">
                        <input class="form-check-input col1" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            Name
                        </label>
                    </div>
                </th>
                <th scope="col">
                    <div class="form-check">

                        <label class="form-check-label" for="flexCheckDefault">
                            ItemType
                        </label>
                    </div>
                </th>
                <th scope="col">Rate</th>
                <th scope="col">Quantity</th>
                <th scope="col">Available</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.items)
            {
                <tr>
                    <th scope="row">

                        
                            <input class="form-check-input col1" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                <img src="~/images/dining-menu.png" style="width:20%;" alt="">
                                <label for="" style="font-size: 14px;">@item.Itemname</label>
                            </label>
                     
                    </th>
                    <td>@if(item.Itemtype){<img src="~/images/veg-icon.svg" style="width:25px" alt="">}else{<img src="~/images/non-veg-icon.svg" style="width:25px" alt="">}</td>
                    <td>@item.Itemrate</td>
                    <td>@item.Itemquantity</td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" @(item.Isavailable ? "checked" : "unchecked")>   
                        </div>
                    </td>
                    <td>
                        <div class="d-flex justify-content-start w-100 pb-2 h-100">
                            <a href="">
                                <img src="~/images/pencil-square.svg" class="me-2" alt="">
                            </a>
                            <a href="" data-bs-toggle="modal" data-bs-target="#exampleModalCenter2">
                                <img src="~/images/trash-fill.svg" alt="">
                            </a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="bg-white w-100 d-flex justify-content-end align-items-center pe-2">
        <div class="d-flex justify-content-center align-items-center">
            <label for="">items per page:</label>
            <div class="dropdown mt-2">
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">

                    <option value="1" selected>1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="3">4</option>
                    <option value="3">5</option>
                    <option value="3">6</option>
                </select>

            </div>
        </div>
        <label for="" class="me-2">Showing 1-5 of 13</label>
        <div class="d-flex mt-1">
            <button type="button" class="btn btn-outline-dark btn2" style="
                                           padding: 6px;
                                       "><img src="" alt=""><img src="~/images/left-chevron-svgrepo-com.svg"
                    style="width:25px" alt=""></button>
            <button type="button" class="btn btn-outline-dark btn2 mb-2" style="
                                           padding: 5.8px;
                                       "><img src="~/images/left-chevron-svgrepo-com.svg" style="width:25px;rotate: 180deg;"
                    alt=""></button>
        </div>
    </div>

</div>